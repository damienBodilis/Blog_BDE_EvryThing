								<div id="blocklogin class="navbar-form navbar-right" role="form"">
									{{ render(controller("FOSUserBundle:Security:login"))}}
								</div>
							{% endblock %}
						</ul>								
					</div><!--/.nav-collapse -->
				</div>
			</div>
		<div class="row">
			<div id="centre" class="container marketing row placeholders">
				{%block principal%}
				{%endblock%}
			</div>
		</div>
		<div id="footer" class="blog-footer col-md-10 col-md-offset-1">
			<div class="container">
				<p id="partenaire">
					Partenaires : 
					<img src="{{ asset('bundles/evrythingblog/images/logoUEVE.jpg') }}" alt="logo UEVE" />
					<img src="{{ asset('bundles/evrythingblog/images/logoMiageCo.png') }}" alt="logo Miage Co" />
					<img src="{{ asset('bundles/evrythingblog/images/logoMozilla.png') }}" alt="logo UEVE" />
				</p>
				<script src="{{ asset('bundles/evrythingblog/js/jquery-1.11.1.min.js') }}"></script>
				<script src="{{ asset('bundles/evrythingblog/js/bootstrap.min.js') }}"></script>
				<script type="text/javascript">

		var positionElementInPage = $('#menuflotant').offset().top;
		$(window).scroll(
			function() {
				if ($(window).scrollTop() >= positionElementInPage) {

					$('#menuflotant').addClass("floatable");
				} else {

					$('#menuflotant').removeClass("floatable");
				}
			}
		);
	</script>
			</div>
		</div>
    </div>
</body>
</html>